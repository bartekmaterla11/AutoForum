{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - {% for item in posts %}{{ item.title }}{% endfor %}{% endblock %}
{% block body %}
    <div class="container">
        <div id="main" class="text-white mt-3 w-75 float-left mb-4 " >
            {% for item in posts %}
            <div class="card-body mr-2 bgcolor3 brad p-2 pl-3">
                <i class="icon-home"></i> Jesteś na /<a class="text-white" href="{{ path('index') }}"> Forum </a>
                / <span class="text-white"> {{ item.title }} </span>
            </div>

                <div class="mr-2 bg-dark mt-1 brad ">
                    <div class="p-2 pl-3 border-bottom border-primary">
                        <h4>{{ item.title }}</h4>
                    </div>
                    <div class="p-3 pb-4 mt-2 pb-1">
                        <div class="float-left font-25 mr-2">
                            <div  id="like_up" data-id="1" class="pb-2 text-center bg-success">
                                <a href="" class="pl-2  text-white"><i class="mr-2  text-left icon-thumbs-up-alt"></i></a>
                            </div>
                            <div  id="like_down" data-id="0"   class="pt-1 pb-2 text-center bg-danger">
                                <a href="" class="pl-2 text-white"><i class="mr-2  icon-thumbs-down-alt"></i></a>
                            </div>
                            <span class="font-10">Oceń pytanie</span>
                        </div>

                        <div class="float-left pl-3 w-80">
                            <div class="border-bottom border-color font-weight-bold font-color font-15 font-weight-light">
                               <span class="text-white font-weight-normal">pytanie</span> zadane przez <a href="" class="font-weight-normal text-white">{{ item.user.username }}</a>
                                w dniu <span class="text-white font-weight-normal">{{ item.uploadedAt|date('d.m.Y') }}</span>
                            </div>
                            <div class="mt-3 pb-4 border-bottom border-primary">
                                {{ item.content }}
                                {% if item.filename %}
                                <img class="mr-auto ml-auto mt-4 max-width" src="/images/post/{{ item.filename }} " alt="Zdjęcie">
                                {% endif %}
                            </div>
                            <div class="mt-2">
                                <a href="{{ path('view_post',{'slug': item.slug}) }}" >
                                    <button type="submit" class="btn font-10 font-weight-bold text-white bg-secondary">
{#                                    {% if app.user %}{% else%}  data-toggle="modal" data-target="#confirm-delete" {% endif %}>#}
                                        <i class="font-18 icon-comment-empty"></i>Odpowiedz
                                    </button>
                                </a>
                            </div>
                            {% if app.user %}
                                {{ include('post/answer/answer_post.html.twig') }}
                            {% else %}
                                {{ include('post/answer/answer_post.html.twig') }}
                            {% endif %}
                        </div>

                        <div style="clear: both"></div>
                    </div>
                </div>
            <div class="mt-1 pl-3 p-1 mb-1 bg-dark brad mr-2">
                <h4 class="p-0 pl-2" >Odpowiedzi</h4>
            </div>

            <div class="bg-dark brad p-3 mb-2 mr-2">
                <div class="float-left p-2 pl-3 pr-3 bgcolor3 brad mr-2">
                    <div class="">
                        <i class="mr-3">#</i> 25
                    </div>
                    <div class="">
                        <i class="mr-3">%</i> 3
                    </div>
                </div>
                <div class="float-left pl-3 w-80 ">
                    <div class="border-bottom border-color font-color font-15 font-weight-bold">
                        <span class="text-white font-weight-normal">odpowiedź</span> dodana przez
                        <a href="" class="font-weight-normal text-white">gdfgfdgdfg</a>
                        w dniu <span class="text-white font-weight-normal">354535345</span>
                    </div>
                    <div class="mt-3 pb-4 ">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque enim nulla, vehicula
                        in blandit eget, ornare in mauris.<br><br>

                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque enim nulla, vehicula
                        in blandit eget, ornare in mauris.
                    </div>
                </div>
                <div style="clear: both"></div>

            {% endfor %}

            </div>
        </div>
        <div class="color mb-4 mt-3 w-25 float-left">

            {{ include('components/info_datetime_com.html.twig') }}
            {{ include('components/button_add_post_ad_com.html.twig') }}
            {{ include('components/info_data_com.html.twig') }}
            {{ include('components/social_media_com.html.twig') }}

        </div>
    </div>
    <div style="clear: both"></div>

{% endblock %}