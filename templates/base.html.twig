<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AutoForum{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" >
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" >
        {% endblock %}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="">AutoForum</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0 ">
                    <li class="nav-item" {% if app.request.get('_route')=='index'%} class="active text-white" {% endif%} >
                        <a class="nav-link" href="#">Forum</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Ogłoszenia</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0 mr-5">
                    <input class="form-control mr-sm-2" type="search" placeholder="Szukaj na forum..." aria-label="Search">
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Icon</button>
                </form>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Zaloguj się</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rejestracja</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}
    <footer class="bg-dark mt-5 text-center text-white p-3 mt-5">
        <div class="container">
            Copyright 2020 | www.autoforum.pl
        </div>
    </footer>
        {% block javascripts %}
            <script src="{{ asset('assets/js/bootstrap.min.js') }}" ></script>
            <script src="{{ asset('assets/js/jquery-3.5.1.slim.min.js') }}" ></script>
            <script src="{{ asset('assets/js/popper.min.js') }}" ></script>
            <script src="{{ asset('asset/js/sticky.js') }}"></script>
        {% endblock %}
    </body>
</html>
