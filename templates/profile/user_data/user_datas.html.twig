{% if app.user.username == item.username %}
    <div class="mt-3 p-2 pb-4 border-bottom border-primary">
        {% for message in app.flashes('success_edit_datas') %}
            <div class="mb-1 bg-success brad text-center p-1">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error_edit_data') %}
            <div class="mb-2 bg-danger brad text-center p-1">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success_edit_pass') %}
            <div class="mb-1 bg-success brad text-center p-1">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error_edit_pass') %}
            <div class="mb-2 bg-danger brad text-center p-1">
                {{ message }}
            </div>
        {% endfor %}
        <h4 class="mb-3">Mój Profil</h4>
        {{ form_start(editProfile) }}
        <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-top border-color-1 ">
            <div class="float-left w-25">Zarejestrowany od:</div>
            <div class="float-left w-75">{{ item.uploadedAt|date('d-m-Y') }}
            </div>
            <div style="clear: both"></div>
        </div>
        <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-color-1">
            <div class="float-left w-25">Nazwa użytkownika:</div>
            <div class="float-left w-75 pr-1">{{ form_row(editProfile.username) }}</div>
            <div style="clear: both"></div>
        </div>
        <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-color-1">
            <div class="float-left w-25">Email:</div>
            <div class="float-left w-75 pr-1">{{ form_row(editProfile.email) }}</div>
            <div style="clear: both"></div>
        </div>
        <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-color-1">
            <div class="float-left w-25">Avatar:</div>
            <div class="float-left w-75 pr-1 pt-2">
                <span style="display: inline-block">
                    <img src="/images/user/{{ item.filename }}" class="max-width-30 max-height-30 mb-2">
                </span>
                {{ form_widget(editProfile.filename) }}

            </div>
            <div style="clear: both"></div>
        </div>
        <button type="submit" class="btn btn-outline-success mt-3">Zapisz zmiany</button>
        {{ form_end(editProfile) }}
    </div>
    <div class="mt-3 p-2">
        <h4 class="mb-3">Zmień hasło</h4>
        {{ form_start(editPassword) }}
            <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-top border-color-1">
                <div class="float-left w-25">Aktualne hasło:</div>
                <div class="float-left w-75 pr-1">{{ form_row(editPassword.Password) }}</div>
                <div style="clear: both"></div>
            </div>
            <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-top border-color-1">
                <div class="float-left w-25">Nowe hasło:</div>
                <div class="float-left w-75 pr-1">{{ form_row(editPassword.plainPassword) }}</div>
                <div style="clear: both"></div>
            </div>
            <div class="pt-2 pb-2 pl-1 font-17 border-bottom border-color-1">
                <div class="float-left w-25">Powtórz nowe hasło:</div>
                <div class="float-left w-75 pr-1">{{ form_row(editPassword.second_password) }}</div>
                <div style="clear: both"></div>
            </div>
            <button type="submit" class="btn btn-outline-success mt-3">Zapisz zmiany</button>
        {{ form_end(editPassword) }}
    </div>
{% else %}
    <div class="p-2 m-2 ">
        <h5>Brak danych o {{ item.username }} </h5>
    </div>
{% endif %}