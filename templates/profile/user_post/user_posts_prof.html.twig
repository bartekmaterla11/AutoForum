{% for message in app.flashes('success_remove_post') %}
    <div class="mt-2 bg-success brad text-center p-1">
        {{ message }}
    </div>
{% endfor %}
<div class="border-bottom border-color-1">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Moje Pytania/Wątki</h4>
</div>
{% if item.posts.count > 0 %}
    {% for item in posts %}
        <div class= "border-bottom border-secondary mt-4 p-1 pb-4 mb-4 ">
            <div class="float-left w-18">
                <div class="float-left {% if item.answers.count > 0%} bg-success {% else %}bgcolor4 {% endif%} p-1 font-11 pl-2 pr-2 pb-2">
                    <h5 class="text-center">{{ item.answers.count }}</h5>Odpowiedzi
                </div>
                <div class="float-left pt-2 h-60 bgcolor3 pl-3 pr-3 ">
                    <h6 class="font-15 text-center" >{{ item.likeUp }}</h6>
                    <h6 class="mb-2 text-color-1"><i class=" icon-thumbs-up-alt"></i></h6>
                </div>
                <div style="clear: both"></div>
            </div>
            <div class="float-left{% if app.user %} {% if app.user.username == item.user.username %}w-64{% else %} w-80 {% endif %}{% endif %}">
                <h4 data-id="{{ item.id }}" class="pl-2" > <a href="{{ path('view_post',{'categorySlug': item.category.slug,'slug':item.slug }) }}" class="text-color-3">{{ item.title }}</a></h4>
                <div class="pl-2">
                    {% if app.user %}
                        {% if app.user.username == item.user.username %}
                            <h6  class="text-color-4 font-weight-light" ><span class="text-white">Zadałeś</span>
                                pytanie dnia <span class="text-white"> {{ item.uploadedAt|date('d.m.Y')}} </span>
                                | <span class="text-white"> {{ item.uploadedAt|date('H:i')}} </span>
                            </h6>
                        {% else %}
                            <h6  class="text-color-4 font-weight-light" ><span class="text-white">Pytanie</span> zadane przez
                                <a href="{{ path('other_profile',{'userId': item.user.id ,'username':item.user.username, 'userTab':'profile'}) }}"
                                   class="font-weight-normal text-white">
                                    {{ item.user.username }}
                                </a>
                                dnia <span class="text-white">{{ item.uploadedAt|date('d.m.Y')}}</span>
                                | <span class="text-white"> {{ item.uploadedAt|date('H:i')}} </span>
                            </h6>
                        {% endif %}
                    {% else %}
                        <h6  class="text-color-4 font-weight-light" ><span class="text-white">Pytanie</span> zadane przez
                            <a href="{{ path('other_profile',{'userId': item.user.id ,'username':item.user.username, 'userTab':'profile'}) }}"
                               class="font-weight-normal text-white">
                                {{ item.user.username }}
                            </a>
                            dnia <span class="text-white">{{ item.uploadedAt|date('d.m.Y')}}</span>
                            | <span class="text-white"> {{ item.uploadedAt|date('H:i')}} </span>
                        </h6>
                    {% endif %}
                </div>
            </div>
            <div class="float-left w-18 text-right">
{#                {{ include('components/ajax_remove_post_com.html.twig',{postId: item.id, userTab:'questions', userId: item.user.id }) }}#}

{#                {{ include('components/ajax_remove_post_com.html.twig',{item:item}) }}#}
{#                <button  class="btn btn-outline-danger" data-toggle="modal" data-target="#confirm-delete-4">#}
{#                    Usuń#}
{#                </button>#}
                {% if app.user %}
                    {% if app.user.username == item.user.username %}
                        <a href="{{ path('remove_post',{'postId': item.id, 'userTab':'questions', 'userId': item.user.id }) }}" >
                            <button type="button" class="btn btn-outline-danger mr-1">Usuń</button>
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}
{% else %}
    <div class="p-2 m-2 ">
        <h5>Brak pytań {{ item.username }} </h5>
    </div>
{% endif %}
