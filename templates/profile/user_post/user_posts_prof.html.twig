{% for message in app.flashes('success_remove_post') %}
    <div class="mt-2 bg-success brad text-center p-1">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error_remove_post') %}
    <div class="mt-2 bg-danger brad text-center p-1">
        {{ message }}
    </div>
{% endfor %}
<div class="border-bottom border-color-1">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Moje Pytania/Wątki</h4>
</div>
{% if item.posts.count > 0 %}
    {{ include('post/post_list/posts.html.twig', {posts:posts}) }}
{% else %}
    <div class="p-2 m-2">
        <h5><span class="text-color-3">Brak pytań dla</span> {{ item.username }} </h5>
    </div>
{% endif %}
