<div class="border-bottom border-color-1">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Polubione Posty</h4>
</div>
{% if likePosts is not empty %}
    {% for item in likePosts %}
        <div class="brad bgcolor mt-3 p-3 pb-3 mb-3 ">
            <div class="float-left w-18">
                <div class="float-left {% if item.answers.count > 0 %} bg-success {% else %}bgcolor4 {% endif %} p-1 font-11 pl-2 pr-2 pb-2">
                    <h5 class="text-center">{{ item.answers.count }}</h5>Odpowiedzi
                </div>
                <div class="float-left pt-2 h-60 bgcolor3 pl-3 pr-3 ">
                    <h6 class="font-15 text-center">{{ item.likeUp }}</h6>
                    <h6 class="mb-2 text-color-1"><i class=" icon-thumbs-up-alt"></i></h6>
                </div>
                <div style="clear: both"></div>
            </div>
            <div class="float-left w-80 ">
                <h5 data-id="{{ item.id }}" class="pl-2 "><a
                            href="{{ path('view_post',{'categorySlug': item.category.slug,'slug':item.slug }) }}"
                            class="text-color-3">{{ item.title }}</a></h5>
                <div class="pl-2 pt-2 font-13 text-color-4">
                    {{ include('components/verification_user_with_item_posts.html.twig',{post:item}) }}
                </div>
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}
{% else %}
    <div class="p-2 m-2">
        <h5><span class="text-color-3">Brak polubionych pytań dla </span> {{ item.username }} </h5>
    </div>
{% endif %}
<div class="border-bottom border-color-1 mb-3 mt-4">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Polubione Ogłoszenia</h4>
</div>
{% if likeOffers is not empty %}
    {{ include('announcement/view/components/annoucements_list_option_1.html.twig',{offers:likeOffers}) }}
{% else %}
    <div class="p-2 m-2">
        <h5><span class="text-color-3">Brak polubionych ofert dla </span> {{ item.username }} </h5>
    </div>
{% endif %}