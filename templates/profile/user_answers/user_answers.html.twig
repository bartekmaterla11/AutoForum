<div class="border-bottom border-color-1">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Moje Odpowiedzi</h4>
</div>

{% if item.answers.count > 0 %}
    {% for item in userAnswers %}
        <div class="bgcolor brad mt-3 p-3 pb-4 mb-3 ">
            <div class="float-left w-17">
                <div class="float-left pt-1 pb-2{% if item.answers.count > 0%} bg-success {% else %}bgcolor4 {% endif%} font-11 pl-2 pr-2 text-center">
                    <h5 class="mb-2">{{ item.answers.count }}</h5> <span>Odpowiedzi</span>
                </div>
                <div class="float-left pt-2 h-60 bgcolor3 pl-3 pr-3 ">
                    <h6 class="font-15 text-center" >{{ item.likeUp }}</h6>
                    <h6 class="mb-2 text-color-1"><i class=" icon-thumbs-up-alt"></i></h6>
                </div>
                <div style="clear: both"></div>
            </div>
            <div class="float-left w-80 text-color-3">
                <h5 data-id="{{ item.id }}" class="pl-2" >
                    <a class="text-color-3" href="{{ path('view_post',{'categorySlug': item.category.slug,'slug':item.slug }) }}" >
                        {{ item.title }}
                    </a>
                </h5>
                <div class="pl-2 pt-2 font-13 text-color-4">
                    {{ include('components/verification_user_with_item_answers.html.twig',{item:item}) }}
                </div>
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}
{% else %}
    <div class="p-2 m-2 ">
        <h5><span class="text-color-3"> Brak odpowiedzi dla </span>{{ item.username }} </h5>
    </div>
{% endif %}
