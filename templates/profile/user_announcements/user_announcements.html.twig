{% for message in app.flashes('success_remove_offer') %}
    <div class="mt-2 bg-success brad text-center p-1">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error_remove_offer') %}
    <div class="mt-2 bg-danger brad text-center p-1">
        {{ message }}
    </div>
{% endfor %}
<div class="border-bottom border-color-1 mb-3">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Moje Ogłoszenia</h4>
</div>
{% if item.offers.count > 0 %}
    {{ include('announcement/view/components/annoucements_list_option_1.html.twig',{offers:offers}) }}
{% else %}
    <div class="p-2 m-2 ">
        <h5><span class="text-color-3">Brak ogłoszeń dla</span> {{ item.username }} </h5>
    </div>
{% endif %}