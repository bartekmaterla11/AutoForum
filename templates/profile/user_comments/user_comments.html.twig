<div class="border-bottom border-color-1">
    <h4 class="mb-3 ml-1 mt-3 pb-2">Moje Komentarze</h4>
</div>
{% if item.commentAnswers.count > 0 %}
    {% for item in userComments %}
        <div class= "bgcolor brad mt-3 p-3 pb-3 mb-4 ">
            <div class="float-left mr-1">
                <div class=" pt-1 pb-2 {% if item.commentAnswers.count > 0%} bg-success {% else %}bgcolor4 {% endif%} font-11 pl-2 pr-2 text-center">
                    <h5 class="mb-2">{{ item.commentAnswers.count }}</h5> <span>Komentarzy</span>
                </div>
            </div>
            <div class="float-left w-80">
                <h5 data-id="{{ item.id }}" class="pl-2" >
                    <a href="{{ path('view_post',{'categorySlug': item.post.category.slug,'slug': item.post.slug }) }}" class="text-color-3 ">{{ item.post.title }}</a>
                </h5>
                <div class="pl-2 pt-2 font-13 text-color-4">
                    {{ include('components/verification_user_with_item_posts.html.twig',{post:item.post}) }}
                </div>
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}
{% else %}
    <div class="p-2 m-2 ">
        <h5><span class="text-color-3">Brak komentarzy dla </span> {{ item.username }} </h5>
    </div>
{% endif %}