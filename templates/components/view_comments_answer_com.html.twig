{% if comments.count > 0 %}
    <div class="mt-3">
        <h5 class="bgcolor text-secondary p-2 pl-3 mb-0">Komentarze</h5>
        {% for message in app.flashes('error_remove_comment') %}
            <div class="mr-2 bg-danger brad text-center p-1">
                {{ message }}
            </div>
        {% endfor %}
        {% for item in comments %}
            <div class="bgcolor p-3 mt-1">
                <div class="float-left w-85">
                    <div class="border-bottom border-color-1 font-13 text-secondary">
                        {{ include('components/verification_user_with_item_comments.html.twig',{item:item}) }}
                    </div>
                    <div class="pt-2 pb-2 border-bottom border-color-1">
                        {{ item.contentCom }}
                    </div>
                    {% if app.user %}
                        {% if app.user.username == item.user.username %}
                        <a class="" href="{{ path('remove_comment',{'categorySlug': catSlug,'slug': item.answer.post.slug ,'commentId': item.id}) }}" >
                            <button type="button" class="btn mt-1 bg-danger text-white font-11 pl-2 pr-2">Usu≈Ñ</button>
                        </a>
                        {% endif %}
                    {% endif %}
                </div>
                <div class="float-left w-15 pl-3 text-center">
                    {{ include('components/verification_user_with_item_photos.html.twig',{post:item}) }}
                </div>
                <div style="clear: both"></div>
            </div>
        {% endfor %}
    </div>
{% endif %}