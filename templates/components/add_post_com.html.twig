<div class="w-85 mr-auto ml-auto p-3 mb-2">
    <div class="border border-primary p-4 brad">
    {{ form_start(postForm) }}
        <div class="mb-3 "><h6 class="font-weight-light mb-0">{{ form_label(postForm.category) }}</h6> {{ form_widget(postForm.category) }} </div>
        <div class="mb-3 "><h6 class="font-weight-light">Tytuł</h6> {{ form_row(postForm.title) }} </div>
        <div class="mb-3"><h6 class="font-weight-light">Treść</h6> {{ form_row(postForm.content) }} </div>
        <div class="mb-2" id="file_post">
            <ul class="file_post pl-0" data-prototype="{{ form_widget(postForm.photoFilesForPosts.vars.prototype)|e('html_attr') }}">
            </ul>
        </div>
        <div class="text-right">
            <button type="submit" class="font-18 btn btn-lg btn-outline-primary ">Dodaj post</button>
        </div>
    {{ form_end(postForm) }}
    </div>
</div>
