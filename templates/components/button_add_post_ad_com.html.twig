{{ include('components/ajax_add_post_com.html.twig') }}
<div class="bg-dark p-3 mt-1 brad">
    <h5 class="text-color-5 text-center">Masz jakieś pytania?</h5>
    <p class="text-center text-white">Możesz dodać je tutaj</p>
    {% if app.user %}
        <a class="text-primary" href="{{ path('add_post') }}">
            <button  class="btn btn-outline-primary my-2 my-sm-0 w-100 ">
                Dodaj
            </button>
        </a>
    {% else %}
        <button  class="btn btn-outline-primary my-2 my-sm-0 w-100 "
                 data-toggle="modal" data-target="#confirm-delete">Dodaj
        </button>
    {% endif %}
</div>
