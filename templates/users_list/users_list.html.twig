{% if users is defined %}
    {% for item in users %}
        <div class="bgcolor brad p-2 mb-2 ">
            <div class="float-left w-15">
                <div class="width-2 text-center">
                    <a href="{{ path('other_profile',{'page':1,'userId': item.id, 'username': item.username, 'userTab': 'profile'}) }}">
                        <img src="/images/user/{{ item.filename }}" alt="Zdjęcie usera" class="max-width-2 max-height-2">
                    </a>
                </div>
            </div>
            <div class="float-left w-64 pl-3 text-color-3">
                <h4><a class="text-color-3"
                       href="{{ path('other_profile', {'page':1,'userId': item.id, 'username': item.username, 'userTab': 'profile'}) }}">{{ item.username }} </a>
                </h4>
                <p class="font-13"><span class=" text-white">Zarejestrowany</span> w dniu <span
                            class="text-white">{{ item.uploadedAt|date('d.m.Y') }}</span></p>
            </div>
            <div class="float-left w-20 text-right">
                <div class="float-left w-50 text-center">
                    <h6 class="text-color-3">Posty</h6>
                    <div class="mt-2 font-18">{{ item.posts.count }}</div>
                </div>
                <div class="float-left w-50 text-center">
                    <h6 class="text-color-3">Oferty</h6>
                    <div class="mt-2 font-18">{{ item.offers.count }}</div>
                </div>
                <div style="clear: both"></div>
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}
{% else %}
    <div class="">
        <h5>Nie udało się znaleźć użytkowników</h5>
    </div>
{% endif %}