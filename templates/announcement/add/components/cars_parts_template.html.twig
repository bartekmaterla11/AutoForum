<div id="template4">
    <div class="vans border border-primary p-4 mt-3 brad" style="display: none">
        <div class="mb-3 ">
            <h6 class="font-weight-light mb-2">Wybierz pojazd<span style="color: red">*</span></h6>
            <select id="auto_parts_form_name" class="categorySelect1">
                <option value="0" selected>-</option>
                {% for item in cat %}
                    {% if item.id == 4 %}
                        {% for it in item.childrenCategories %}
                            <option value="{{ it.id }}">{{ it.name }}</option>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="border border-primary p-4 mt-3 brad" style="display: none">
        <div class="price_of_auto_parts_form_name mb-3 w-33 ">
            <h6 class="font-weight-light mb-2">Cena<span style="color: red">*</span></h6>
            <input class=" float-left price " placeholder="000 000" type="text">
            <span class="float-left ml-2 pt-1 mt-1 price-ite">z≈Ç</span>
            <div style="clear: both"></div>
        </div>
    </div>
    <div class="border border-primary p-4 mt-3 brad" style="display: none">
        <div class="mb-3 ">
            <h6 class="font-weight-light mb-2">Rodzaj<span style="color: red">*</span></h6>
            <select id="type_of_cars_parts_form_name" class="categorySelect1">
                <option value="0">-</option>
                {% for item in type %}
                    <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3 ">
            <h6 class="font-weight-light mb-2">Stan techniczny<span style="color: red">*</span></h6>
            <select id="condition_of_cars_parts_form_name" class="categorySelect1">
                <option value="0">-</option>
                {% for item in condition %}
                    <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3 ">
            <h6 class="font-weight-light mb-2">Stan<span style="color: red">*</span></h6>
            <select id="state_of_cars_parts_form_name" class="categorySelect1">
                <option value="0">-</option>
                {% for item in state %}
                    <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
