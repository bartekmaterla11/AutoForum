{% extends 'base.html.twig' %}

{% block title %}Ogłoszenia - {{ parent() }}{% endblock %}

{% block body %}
    <div class="text-white mt-3 w-75 float-left mb-4 announ" >
        <div class="card-body mr-2 bgcolor3 brad p-2 pl-3">
            <i class="icon-home"></i> Jesteś na / <a class="text-white" href="{{ path('index') }}">Strona główna</a> / Ogłoszenia
        </div>
        <div id="success_ann">
            <div class="p-1 text-center bg-success mt-1 brad mr-2" style="display: none"></div>
        </div>
        <div class="mr-2 bg-dark mt-1 brad ">
            <div class="p-2 pl-3 border-bottom border-primary">
                <h4 class="text-color-3">Ogłoszenia motoryzacyjne</h4>
            </div>
            <div class="p-3">
                <div class="w-100">
                    <h4 class="text-color-4 text-center mt-1 mb-3">Kategorie</h4>
                </div>
                <div id="categoryAnnouncementsSelect" class="pl-2 pb-5 border-bottom border-secondary ">
                    {% for item in cat %}
                    <div class="float-left w-33 mt-3" >
                        <a data-value="{{ item.id }}" class="ml-4 text-white color-text" href="{{ path('announcement_filters', {'categorySlug': item.slug }) }}" >
                            <span class="font-18 pt-1" ><i class="icon-tags"></i> </span>{{ item.name }}
                        </a>
                    </div>
                    {% endfor %}
                    <div style="clear: both"></div>
                </div>
                <div class="mt-3">
                    <div class="border-bottom border-secondary pb-3 mb-3">
                        <div class="float-left w-25">
                            <span class="pl-2">Znaleziono ogłoszeń: {{ number }}</span>
                        </div>
                        <div class="float-left w-60 text-right">
                            <span class="pr-1">Sortuj:</span>
                            <select id="sortOffers" name="sort" class="categorySelect5">
                                <option value="0" selected>Najnowsze</option>
                                <option value="1">Najtańsze</option>
                                <option value="2">Najdroższe</option>
                            </select>
                        </div>
                        <div class="float-left font-23">
                            <div class="float-left ml-4">
                                <div id="listType" class="list" data-value=""><i class=" icon-download-cloud"></i></div>
                            </div>
                            <div class="float-left ml-3">
                                <div id="groupType" data-value=""><i class="icon-download-cloud"></i></div>
                            </div>
                            <div style="clear: both"></div>
                        </div>
                        <div style="clear: both"></div>
                    </div>
                    {% if offers is defined %}
                        {{ include('announcement/view/components/annoucements_list_option_1.html.twig',{offers:offers}) }}
                        <div class="text-center w-100 p-1 pagination">
                            {{ knp_pagination_render(offers) }}
                        </div>
                    {% endif %}
                    {% if offers.count == 0 %}
                        <div class="mt-2">
                            <div class="mr-2 mt-1 brad text-center p-1">
                                Nie znaleziono postów z tej kategorii
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}